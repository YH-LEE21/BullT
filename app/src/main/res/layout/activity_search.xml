<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search.SearchActivity"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/back_ib"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                />
        <SearchView
            android:id="@+id/SearchView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="ex) 옷,바지,신발"
            android:iconifiedByDefault="false"
            tools:ignore="MissingConstraints"
            />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="50dp"
            android:id="@+id/search_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </FrameLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="@drawable/bottom_round"
        android:backgroundTint="@color/main_color"
        >
        <TableRow
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/clothes_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="5sp"
                android:text="clothes" />

            <Button
                android:id="@+id/pants_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="45dp"
                android:background="@drawable/round"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="5sp"
                android:text="pants" />

            <Button
                android:id="@+id/shoes_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round"
                android:text="shoes"
                android:layout_marginRight="20dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="5sp"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/sweater_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round"
                android:text="sweater"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="5sp"
                />

            <Button
                android:id="@+id/padding_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="45dp"
                android:background="@drawable/round"
                android:text="padding"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="5sp"

                />

            <Button
                android:id="@+id/etc_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round"
                android:layout_marginRight="20dp"
                android:text="etc"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="5sp"
                />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="@drawable/top_round"
        >
        <TableRow>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/SearchResult_recycelrView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>